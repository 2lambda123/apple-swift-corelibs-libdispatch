(package
:name "AnarchyDispatch"
    :overlays {
        :compile-osx {
            :compileOptions ["-I" "AnarchyDispatch/anarchy"]
        }
        :compile-linux {
            :compileOptions ["-I" "AnarchyDispatch/anarchy" "-I" "AnarchyDispatch/" "-Xcc" "-fblocks"]
            :linkOptions ["-LAnarchyDispatch/build/lib/"]
        }
    }
    :tasks {
        :default {
            :tool "shell"
            :script "anarchy/build.sh"
        }
    }
)
